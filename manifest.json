{
  "manifest_version": 3,
  "name": "Not-Distracted",
  "description": "Dikkat dağıtıcı sitelere erişmeden önce görev tamamlaman gerek!",
  "version": "1.0",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "scripting",
     "alarms" 
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/banner.png"
  },
  "icons": {
    "128": "images/banner.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "videoAd.html",
        "blur.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
