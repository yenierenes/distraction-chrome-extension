{
  "manifest_version": 3,
  "name": "Not-Distracted",
  "description": "Dikkat dağıtıcı sitelere erişmeden önce görev tamamlaman gerek!",
  "version": "1.0",
  "permissions": ["storage", "tabs", "webNavigation", "scripting"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/banner.png"
  },
  "icons": {
    "128": "images/banner.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["videoAd.html", "level.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
